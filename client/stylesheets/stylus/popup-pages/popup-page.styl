.s-popup-page
  position absolute
  top 0
  left 0
  display inline-block
  width 100%
  height 100%
  min-width min-app-width
  overflow hidden
  text-align center
  opacity 0
  z-index -1

  &.animation
    animation fadeOut 0.3s

  &.active
    opacity 1
    z-index 1
    animation fadeIn 0.3s

  &-head
    display inline-block
    width 100%
    max-width max-app-width
    height header-height
    background-color rgba(white,0.9)

    &-button
      display inline-block
      width 50px
      height header-height
      line-height header-height
      font-size 0
      cursor pointer

      &-close
        float right

  &-body
    display inline-block
    width 100%
    height 100%
    box-sizing border-box
    padding-bottom header-height
    background-color rgba(asbestos-2, 0.5)

.s-popup
  position absolute
  top header-height
  left 0
  display inline-block
  width 100%
  height 0
  min-height 0
  max-height 0
  overflow hidden
  transition min-height 0.4s

  &.active
    min-height 100%


@keyframes fadeIn {
  0% {
    opacity: 0; z-index: -1
  }
  1% {
    opacity: 0; z-index: 1
  }
  100% {
    opacity: 1; z-index: 1
  }
}
@keyframes fadeOut {
  0% {
    opacity: 1; z-index: 1
  }
  99% {
    opacity: 0; z-index: 1
  }
  100% {
    opacity: 0; z-index: -1
  }
}