.s-popup-page
  position fixed
  top 0
  left 0
  z-index 11

  display none
  width 100%
  height 100%
  min-width min-app-width
  overflow hidden
  opacity 0

  text-align center

  &-body
    position relative

    display inline-block
    width 100%
    height 100%
    padding-bottom header-height
    box-sizing border-box
    overflow hidden
    /*overflow-y scroll*/

    background-color rgba(asbestos-2, 0.5)

.s-popup
  position absolute
  top 100%
  left 0
  display none
  width 100%
  height 100%
  overflow hidden
