.s-popup-auth
  display inline-block
  background-color white
  border-radius 0 0 2px 2px

  form
    margin 5px 0 40px

  input, button
    display inline-block
    box-sizing border-box
    border none

  input
    height 40px
    margin-bottom 20px
    border-bottom 1px solid grey
    font-size 24px
    color silver

  button
    height 44px
    padding 0
    margin-top 10px
    background rgba(green-1, 0.8)
    border-radius 1px
    color white
    font-size 18px
    cursor pointer
    transition all 0.3s

    &:hover, &:active
      background-color rgba(green-1, 0.9)
    &::after
      content '\A'
      white-space pre

  &-message
    display inline-block
    height 15px
    margin 5px 0 10px
    text-align right
    font-size 12px
    opacity 0.8
    transition color 0.2s

    &.default
      color silver
    &.success
      color green-1
    &.error
      color red-1
    &.warning
      color orange-2

  &-links
    display inline-block
    height 20px
    margin 15px 0 30px
    text-align left

    &-item
      display inline-block
      height 100%
      border-bottom 1px dotted silver
      font-size 12px
      color silver
      cursor pointer
      line-height 20px

      &:last-child
        float right
      &:hover
        border-color transparent

  @media media-desktop
    width 700px
    min-height 220px

    input, button, &-message, &-links
      width 400px

  @media media-tablet
    width 500px
    min-height 220px

    input, button, &-message, &-links
      width 300px
    button
      height 50px

  @media media-phone
    width 100%
    min-height 150px

    form
      margin-bottom 10px

    input, button, &-message, &-links
      width 300px
    button
      height 50px
