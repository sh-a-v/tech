.s-header
  display inline-block
  position relative
  width max-app-width
  height header-height
  box-sizing border-box
  background-color white
  border-bottom 1px solid light-grey

.s-header-button
  display inline-block
  height header-height
  line-height header-height
  font-size 0
  cursor pointer

  &-menu
    width 40px
    @media media-desktop
      &:hover
        opacity 0.9