.desktop-menu-active
  .s-menu
    @media media-desktop
      opacity 1

.s-menu
  display inline-block
  position absolute
  width menu-width
  height 100%
  box-sizing border-box
  padding 0 0 header-height
  font-size 12px
  transition all 0.3s

  @media media-desktop
    opacity 0

  &-inner-wrapper
    width 100%
    height 100%
    box-sizing border-box
    background-color #000
