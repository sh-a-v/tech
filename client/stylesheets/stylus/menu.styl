.desktop-menu-active
  .s-menu
    @media media-desktop
      opacity 1

.s-menu
  display inline-block
  position absolute
  width menu-width
  height 100%
  box-sizing border-box
  padding 0 0 header-height
  font-size 12px
  transition all 0.3s

  @media media-desktop
    opacity 0

  &-inner-wrapper
    display inline-block
    width 100%
    height 100%
    box-sizing border-box
    background-color white

.s-menu-list
  display inline-block
  width 100%
  min-height 100%
  margin 0
  padding 0

  &-item
    position relative
    top 10%
    left 0
    display inline-block
    width 100%
    min-height 50px
    max-height 50px
    background-color white
    transition top 0.3s, min-height 0.3s
    z-index 0

    &:first-child
      top 0

    &-head
      display inline-block
      width 100%
      height 50px

      &-link
        display inline-table
        width 100%
        height 100%

        &-icon
          display table-cell
          width 50px
          height 100%
          vertical-align middle
          text-align center

        &-label
          display table-cell
          height 100%
          vertical-align middle

    &-body
      display none

    &.active
      position absolute
      top 0
      min-height 100%
      max-height 100%
      transition top 0.3s, max-height 0.3s
      z-index 1