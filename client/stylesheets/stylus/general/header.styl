.s-header
  position fixed
  top 0
  left 0
  z-index 10

  display inline-block
  width 100%
  height header-height
  box-sizing border-box

  background-color white
  border-bottom 1px solid grey

.s-header-right-buttons
  display inline-block
  height header-height
  font-size 0
  float right

.s-header-logo
  display inline-block
  height header-height
  line-height header-height
  font-size 0

.s-header-button
  display inline-block
  height header-height
  line-height header-height
  font-size 0
  cursor pointer

  &-menu
    position relative
    width 40px

    .s-icon-menu
      left 0
      opacity 1.0
      transition all 0.3s

    &.active .s-icon-menu
      left -5px
      opacity 0.5

    @media media-desktop
      &.active .s-icon-menu
        opacity 0.2

  &-user
    width 50px
    text-align center
