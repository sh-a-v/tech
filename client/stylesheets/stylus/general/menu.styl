.s-menu
  position absolute
  top 0
  z-index 9

  width menu-width
  height 100%
  padding header-height 0 0
  box-sizing border-box
  overflow hidden

  font-size 0

  @media media-desktop
    left 0
    display inline-block
    margin-left app-offset

  @media media-tablet
    left -1 * menu-width
    display none

  @media media-phone
    left -1 * menu-width
    display none

  &-inner-wrapper
    display inline-block
    width 100%
    height 100%
    box-sizing border-box
    background-color white

.s-menu-list
  display inline-block
  width 100%
  min-height 100%
  margin 0
  padding 0

  &-item
    display inline-block
    width 100%
    min-height menu-item-head-height
    max-height menu-item-head-height
    padding 0

    background-color white
    font-size 0

    transform translateZ(0)
    transition top 0.25s, min-height 0.3s

    &:first-child
      top header-height

    &:nth-child(2)
      top 2 * header-height

    &:nth-child(3)
      top 3 * header-height

    &:nth-child(4)
      top 4 * header-height

    &:nth-child(5)
      top 5 * header-height

    &-head
      position relative
      display inline-block
      width 100%
      height menu-item-head-height
      padding 0
      box-sizing border-box
      border-bottom 1px solid rgba(grey, 0.3)

      &-link
        display inline-table
        width 100%
        height 100%
        text-decoration none
        color asbestos-1
        font-size 14px

        &-icon
          display table-cell
          width 50px
          height 100%
          vertical-align middle
          text-align center

          &-back
            position absolute
            top 0
            left 1px

            display none
            width 12px
            height 12px

            font-size 0

        &-label
          display table-cell
          height 100%
          padding-left 5px
          vertical-align middle

          @media media-phone
            padding-left 0

    &-body
      display inline-block
      background-color #FF0000

    &.hidden
      display none

    &.expanded
      position absolute
      top header-height
      left 0
      z-index 1

      min-height 100%
      height 100%

      .s-menu-list-item-head-link-icon-back
        display block

.s-menu-close
  position fixed
  top 0
  left menu-width
  z-index 9

  display none
  width 100%
  height 100%

  &.active
    display block

    @media media-desktop
      display none
