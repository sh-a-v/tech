.s-menu
  position absolute
  top 0
  z-index 9

  width menu-width
  height 100%
  padding header-height 0 0
  box-sizing border-box
  overflow hidden

  font-size 0

  @media media-desktop
    left 0
    display inline-block

  @media media-tablet
    left -1 * menu-width
    display none

  @media media-phone
    left -1 * menu-width
    display none

  &-inner-wrapper
    display inline-block
    width 100%
    height 100%
    box-sizing border-box
    background-color white

.s-menu-list
  display inline-block
  width 100%
  min-height 100%
  margin 0
  padding 0

  &-item
    position relative
    top 10%
    left 0
    display inline-block
    width 100%
    min-height menu-item-head-height
    max-height menu-item-head-height
    background-color white
    font-size 0
    transition top 0.3s, min-height 0.3s
    z-index 0

    &:first-child
      top 0

    &-head
      display inline-block
      width 100%
      height menu-item-head-height
      box-sizing border-box
      border-bottom 1px solid rgba(grey, 0.3)

      &-link
        display inline-table
        width 100%
        height 100%
        text-decoration none
        color asbestos-1
        font-size 14px

        &-icon
          display table-cell
          width 70px
          height 100%
          vertical-align middle
          text-align center

          @media media-phone
            width 50px

        &-label
          display table-cell
          height 100%
          vertical-align middle

    &-body
      display inline-block

    &.active
      position absolute
      top 0
      min-height 100%
      height 100%
      z-index 1
